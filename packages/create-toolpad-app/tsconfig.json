{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./dist/tsconfig.json.tsbuildinfo",
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["esnext"],
    "isolatedModules": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": false,
    "outDir": "./dist",
    "pretty": true,
    "rootDir": "src",
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
